{% extends "Back/index.html.twig" %}

{% block content %}
    <div class="orders">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-xl-10">
                <div class="card">
                    <div class="card-body">
                        <h4 class="box-title">Liste blog post </h4>
                    </div>
                    <div class="card-body--">
                        <div class="table-stats order-table ov-h">
                            <table class="table ">
                                <thead>
                                <tr>
                                    <th class="serial">#</th>
                                    <th>Date</th>
                                    <th class="avatar">Auteur</th>
                                    <th>Titre</th>
                                    <th>Status</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for blog in blogs %}
                                    <tr>
                                        <td class="serial">{{ loop.index }}.</td>
                                        <td >

                                                {{ blog.date|date("m/d/Y") }}

                                        </td>
                                        <td class="avatar"> {{ blog.author }} </td>
                                        <td><a href="{{ router.generate("modifBlog",{idBlog:blog.id}) }}"><span class="name">{{ blog.title }}</span></a>   </td>
                                        {% if blog.isPublished == 1 %}
                                            <td> <span class="badge badge-complete">publi√©</span> </td>
                                        {% else %}
                                            <td> <span class="badge badge-pending">brouillon</span> </td>
                                        {% endif %}
                                        <td>
                                            <a href="{{ router.generate("modifBlog",{idBlog:blog.id}) }}" class="fa fa-edit fa-2x"></a>
                                        </td>
                                        <td>
                                            <a href="{{ router.generate("modifBlog",{idBlog:blog.id}) }}" class="fa fa-trash fa-2x"></a>
                                        </td>

                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div> <!-- /.table-stats -->
                    </div>
                </div> <!-- /.card -->
            </div>  <!-- /.col-lg-8 -->


        </div> <!-- /.col-md-4 -->
    </div>
{% endblock %}