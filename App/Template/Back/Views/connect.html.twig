{% extends "Back/connect_base.html.twig" %}
{% block title %} Connexion {% endblock %}
{% block connect %}

    <section class="container">

        <div class="row mt-5">
            <div class="col-md-3 col-sm-1"></div>
            <div class="col-md-6 col-sm-11 mt-5">
                <h1 class="text-center" style="color: #f04e3c">Se connecter</h1>
                <form class="form-contact comment_form" method="post"  id="commentForm" action="">
                    {{ form.widget('name')|raw }}
                    {{ form.widget('password')|raw }}
                    <div class="form-group">
                        <button type="submit" class="button button-contactForm btn_1 boxed-btn">Se Connecter</button>
                    </div>
                </form>
            </div>
        </div>


    </section>
{% endblock %}