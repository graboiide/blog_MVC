{% extends "Back/index.html.twig" %}
{% block title %} Parametres {% endblock %}
{% block content %}
    <div class="row">
        <div class="col-12 ">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">
                        Page d'acceuil
                    </strong>
                </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12  ">
                                <form method="post" action="" class="md-form" enctype="multipart/form-data">
                                    <div class="form-group">
                                        {{ form.widget("name")|raw }}
                                    </div>
                                    <i class="fa far fa-save"></i><a href="{{ config.cv }}"> {{ config.cv }} </a>
                                    <div class="form-group">
                                        {{ form.error('cvFile')|raw }}
                                        <div class="custom-file">
                                            {{ form.field("cvFile").getWidget|raw }}
                                            <label class="custom-file-label" for="uploadFile">Télécharger le CV</label>
                                        </div>

                                    </div>
                                    <img src="{{ config.picture }}" alt="" style="max-width: 300px">
                                    <div class="form-group">
                                        {{ form.error('imageFile')|raw }}
                                        <div class="custom-file">
                                            {{ form.field("imageFile").getWidget|raw }}
                                            <label class="custom-file-label" for="uploadFile">Télécharger une photo</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {{ form.widget("presentation")|raw }}
                                    </div>
                                    <div class="form-group">
                                        {{ form.widget("email")|raw }}
                                    </div>
                                    <input type="submit" name="action" class="btn btn-primary" value="Mettre à jour">
                                </form>

                            </div>
                        </div>

                    </div>

            </div>
        </div>

    </div>


{% endblock %}
{% block script %}
    <script src="{{ assets }}/Back/js/upload.js"></script>
{% endblock %}