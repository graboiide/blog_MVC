{% extends "Front/base.html.twig" %}
{% block title %} Blog {% endblock %}
{% block headerTitle %} Greg codeur {% endblock %}
{% block blog %}

    {% include 'Front/flash.html.twig' %}
    <div class="blog_left_sidebar">
        {% for blog in blogs %}
            <article class="blog_item">
                <div class="blog_item_img">
                    <img class="card-img rounded-0" src="{{ blog.image }}" alt="">
                    <div class="blog_item_date">
                        <h3>{{ blog.date|date("d") }}</h3>
                        <p>{{ blog.date|date("M") }}</p>
                    </div>
                </div>
                <div class="blog_details">
                    <a class="d-inline-block" href="{{ router.generate('show',{"id":blog.id,"slug":blog.slug}) }}">
                        <h2 class="blog-head" style="color: #2d2d2d;">{{ blog.title }}</h2>
                    </a>
                    <p>{{ blog.chapo }}{{ cate }}</p>
                    <ul class="blog-info-link">
                        <li><i class="fa fa-user"></i> Par {{ blog.author }}</li>
                        <li><a href="{{ router.generate('show',{"id":blog.id}) }}#comments"><i class="fa fa-comments"></i> {{ blog.nbComment }} {{ blog.nbComment > 1 ? 'commentaires' : 'commentaire' }}</a></li>
                    </ul>
                </div>
            </article>
        {% endfor %}
        {% include 'Front/Views/pagination.html.twig' with {'nbPage': nbPage,'page': page} %}
    </div>
{% endblock %}